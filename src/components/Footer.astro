---
import SocialLinks from "@/components/partial/SocialLinks.astro";
---

<footer class="footer">
  <div class="container">
    <div class="footer__inner">
      <div class="footer__content">
        <div class="_dev">
          Разработка: <a href="https://vk.com/monikossa" rel="nofollow"
            >monikossa</a
          >
        </div>
        <div class="_copy">&copy; letitgo | 2024</div>

        <div class="_links">
          <SocialLinks />
        </div>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    color: var(--color-text-primary);

    &__inner {
      padding-block: 2rem;
      border-top: 1px solid var(--color-line);
    }

    &__content {
      display: flex;
      justify-content: space-between;
      align-items: center;

      ._dev,
      ._copy {
        font-size: 0.75rem;
      }

      ._links {
        font-size: 2rem;
      }
    }
  }
</style>
